{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information"
    }
  },
  "AllowedHosts": "*",
  "ExternalApis": {
    "CzechNationalBank": {
      "BaseUrl": "https://api.cnb.cz/cnbapi",
      "TimeoutInMs": 10000,
      "MaxRetries": 3
    }
  },
  "FeatureManagement": {
    "IsExchangeRatesUpdaterHostedServiceEnabled": true
  },
  "HostedServices": {
    "CnbExchangeRatesUpdater": {
      "DailyRefreshUtcTime": "12:31:00",
      "RetryOnRefreshFailureInSeconds": 300
    }
  },
  "ExchangeRates": {
    "SupportedCurrencies": [
      "USD",
      "EUR",
      "CZK",
      "JPY",
      "KES",
      "RUB",
      "THB",
      "TRY",
      "XYZ"
    ]
  }
}
