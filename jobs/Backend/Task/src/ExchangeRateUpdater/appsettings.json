{
    "ExchangeRateProviders": {
        "CzechNationalBank": {
            "BaseUrl": "https://api.cnb.cz/cnbapi",
            "TimeoutSeconds": 30,
            "Cache": {
                "MonthlyRatesSlidingExpirationInMinutes": 1440,
                "MonthlyRatesAbsoluteExpirationInMinutes": 30,
                "DailyRatesSlidingExpirationInMinutes": 1440,
                "DailyRatesAbsoluteExpirationInMinutes": 30
            }
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information",
            "ExchangeRateUpdater": "Information",
            "OpenTelemetry": "Information"
        },
        "Console": {
            "FormatterName": "json",
            "FormatterOptions": {
                "IncludeScopes": true,
                "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
                "UseUtcTimestamp": true
            }
        }
    },
    "OpenTelemetry": {
        "ServiceName": "ExchangeRateUpdater",
        "ServiceVersion": "1.0.0",
        "ResourceAttributes": {
            "deployment.environment": "development"
        }
    }
}