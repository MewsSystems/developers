{
    "name": "mews-movie-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "test": "jest --watch",
        "test:ci": "jest --ci",
        "pretty:ci": "prettier src/**/*.{ts,tsx,js} --check",
        "pretty": "prettier src/**/*.{ts,tsx,js} --write",
        "ci": "npm run pretty:ci && next lint && npm run test:ci",
        "generate:types:movies": "openapi-typescript https://developer.themoviedb.org/openapi/64542913e1f86100738e227f -o ./src/features/movies/api/generated/types.d.ts"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^1.9.7",
        "next": "14.0.3",
        "react": "^18",
        "react-dom": "^18",
        "react-icons": "^4.12.0",
        "react-redux": "^8.1.3",
        "redux": "^4.2.1",
        "styled-components": "^6.1.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "eslint": "^8",
        "eslint-config-next": "14.0.3",
        "eslint-plugin-testing-library": "^6.2.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "openapi-typescript": "^6.7.1",
        "prettier": "^3.1.0",
        "typescript": "^5"
    },
    "prettier": {
        "tabWidth": 4
    }
