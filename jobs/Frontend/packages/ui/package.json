{
	"name": "@repo/ui",
	"version": "0.1.0",
	"private": true,
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist"
	],
	"exports": {
		"./components/atoms/Input": "./src/components/atoms/Input/index.ts",
		"./components/atoms/Loader": "./src/components/atoms/Loader/index.ts",
		"./components/atoms/Text": "./src/components/atoms/Text/index.ts",
