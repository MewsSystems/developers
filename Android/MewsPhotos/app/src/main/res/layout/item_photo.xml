<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


    <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_small"
            android:layout_marginStart="@dimen/space_small"
            android:layout_marginTop="@dimen/space_smallmedium"
            android:layout_marginBottom="@dimen/space_small"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
            android:id="@+id/txt_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_small"
            android:layout_marginStart="@dimen/space_small"
            android:layout_marginTop="@dimen/space_small"
            android:lines="3"
            android:maxLength="25"
            tools:text="Title: accusamus beatae ad facilis cum similique qui sunt"/>

    <LinearLayout
            android:id="@+id/layout_item_show_ids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView
                android:id="@+id/txt_photo_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                tools:text="Photo ID: 1"/>

        <TextView
                android:id="@+id/txt_album_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                tools:text="Album ID: 1"/>

    </LinearLayout>

</LinearLayout>